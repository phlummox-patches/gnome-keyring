++	const gboolean chosen = FALSE;
+ 	gchar *text;
+ 
+ 	g_assert (GKM_IS_WRAP_PROMPT (self));
+@@ -622,6 +615,7 @@ setup_unlock_keyring_other (GkmWrapPrompt *self,
